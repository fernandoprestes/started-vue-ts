{
  "extends": ["web-recommended", "development"],
  "connector": {
    "name": "local",
    "options": {
      "pattern": ["**", "!.git/**", "!dist/**"],
      "watch": false
    }
  },
  "formatters": ["codeframe"],
  "hints": {
    "no-inline-styles": "off",
    "compat-api/css": [
      "default",
      {
        "ignore": ["text-size-adjust"]
      }
    ]
  },
  "browserslist": ["defaults", "not IE <= 11", "maintained node versions"]
}
